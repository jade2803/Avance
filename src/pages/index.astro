---

<Layout title="Formulario de Cambio">
	<main>
	  <div class="max-w-4xl mx-auto text-center flex justify-center">
		<h2 class="mb-4 text-3xl text-white tracking-tight font-extrabold p-8">"FORMULARIO DE GESTION DE CAMBIO</h2>
	  </div>
	  <div class="container mx-auto flex items-center justify-center">
		<div class="w-full md:w-3/4 lg:w-7/12 bg-slate-100 rounded-lg shadow-md p-5">
			<section class="px-6">
			  <First_Part>
				<br/>
			  </section>
			  <form class="px-6">
				<Datos_Ident/>
				<br/>
				<Datos_Solicitante/>
				<br/>
				<DescripcionCambio/>
				<br/>
				<Tabla client:visible/>
				<br/>
				<Aprobacion/>
				<br/>
			  </form>
		  </div>	  
	  </div>
	</main>
  </Layout>
